<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_color"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:id="@+id/content_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ActionBar.Solid.Automech"
        android:background="@drawable/ab_transparent_automech">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_photo"
            android:contentDescription="@string/photo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_model_trademark"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_photo"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:text="Marca/Modelo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_year"
            android:layout_toRightOf="@id/iv_photo"
            android:layout_below="@id/tv_model_trademark"
            android:paddingTop="3dp"
            android:paddingLeft="8dp"
            android:text="AÃ±o Fabricacion"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nickname"
            android:layout_toRightOf="@id/iv_photo"
            android:layout_below="@id/tv_year"
            android:paddingTop="3dp"
            android:paddingLeft="8dp"
            android:text="SobreNombre"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_last_review"
            android:layout_toRightOf="@id/iv_photo"
            android:layout_below="@id/tv_nickname"
            android:paddingTop="3dp"
            android:paddingLeft="8dp"
            android:text="Ultima Revision"/>


    </RelativeLayout>


</LinearLayout>
